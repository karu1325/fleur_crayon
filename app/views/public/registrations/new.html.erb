<div class="container">
  <div class="row no-gutters">
    <%= render 'public/homes/about' %>
    <div class="col-5 card rounded-5 bg-white mx-auto">
      <div class="card-body">
      <%= form_with model: @user, url: user_registration_path, id:'new_user', class:'new_user' do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <h5 class="border-bottom"><strong>新規登録</strong></h5>

          <div class="field">
            <label for="inputName">ユーザー名(2~20字以内)</label><br>
            <%= f.text_field :name, id:"inputName", placeholder:"ユーザー名", class:"col-10" %>
          </div>

          <div class="field">
            <label for="inputEmail">メールアドレス</label><br />
            <%= f.email_field :email,　id:"inputEmail", placeholder:"sample@mail.com", autocomplete: "email", class:"col-10" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(英数字含む<%= @minimum_password_length %>文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード", class:"col-10" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード", class:"col-10" %>
          </div>
        <div class="row mt-3">
          <div class="btn py-0">
            <%= f.submit "会員登録", class:"btn btn-primary" %>
          </div>
          <div class="btn ml-auto">
            会員の方は<%= link_to'こちら', new_user_session_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>