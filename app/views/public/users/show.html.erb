<div class="container">
  <div class="row align-items-center">
    <div class="post-link col-2">
      <%= link_to'投稿する', new_post_path, class:'btn btn-primary' %>
    </div>
    <% if @user.id == current_user.id %>
      <h2 class="col">ホーム</h2>
    <% end %>
    <div class="col">
      <%= render'user_data', user: @user %>
    </div>
      <div class="col">
        <%= @user.followings.count %>フォロー
        <%= @user.followers.count %>フォロワー
      </div>
      <% if @user.id == current_user.id %>
        <div class="edit-link col-2">
          <%= link_to'ユーザー編集', edit_user_path(current_user.id), class:"btn btn-success" %>
        </div>
      <% else %>
        <%= render "public/relationships/follow_button", user: @user %>
      <% end %>

  </div>
  <div class="row">
    <div class="col-3">
      <%= render'public/users/public_side' %>
    </div>
    <div class="col-8">
      <% @posts.each do |post| %>
        <div class="card">
          <div class="card-body">
            <%= render 'public/posts/post', post: post %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>