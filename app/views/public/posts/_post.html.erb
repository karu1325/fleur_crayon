<div class="card">
  <div class="card-body">
    <%= link_to post_path(post.id) do %>
      <div class="card-user row">
        <%= image_tag post.user.get_profile_image(100,100), class:'rounded-circle profile-icon' %>
        <%= post.user.name %>
        <%= post.created_at.strftime("%Y/%m/%d") %>
      </div>
      <div class="row">
        <div class="card-title">
          <%= post.name %> / <%= post.campany %>
        </div>
      </div>
      <div class="card-image">
        <%= image_tag post.get_image(200,200) %>
      </div>
      <p class="card-text">
        <%= post.caption %>
      </p>
      <div class="card-tag">
        <%= post.tags.map(&:tag_name).join(' ') %>
      </div>
      <% if current_user != post.user %>
      <div class="option-btn row">
        <div id="favorite_button_<%= post.id %>">
          <%= render 'public/favorites/favorite', post: post %>
        </div>
        <div id="bookmark_button_<%= post.id %>">
          <%= render 'public/bookmarks/bookmark', post: post %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>