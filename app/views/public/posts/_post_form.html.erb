<div class="row form-group my-4">
  <label for="inputName" class="col-md-3">商品名　(必須)</label>
  <%= f.text_field :name, class:"form-control col-md-7", id:"inputName", placeholder:"商品名" %>
</div>
<div class="row form-group mb-4">
  <label for="inputCampany" class="col-md-3">メーカー名</label>
  <%= f.text_field :campany, class:"form-control col-md-7", id:"inputCampany", placeholder:"メーカー" %>
</div>
<div class="row form-group mb-4">
  <label for="inputImage" class="col-md-3">画像　(必須)</label>
  <%= f.file_field :image, accept: "image/*", class:"form col-md-7" %>
</div>
<div class="row form-group mb-4">
  <label for="inputCaption" class="col-md-3">投稿文　(必須)</label>
  <%= f.text_area :caption, class:"form-control col-md-7", id:"inputCaption", placeholder:"オススメポイント・使ってみた感想など" %>
</div>
<div class="row form-group mb-4">
  <label for="inputTagName" class="col-md-3">タグ</label>
  <%= f.text_field :tag_name, class:"form-control col-md-7", id:"inputTagName", placeholder:"タグ（スペースで複数登録できます。）" %>
</div>