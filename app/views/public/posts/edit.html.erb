<div class="container">
  <div class="row">
    <%= link_to'投稿する', new_post_path, class:'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="col-3">
      <div class="sidebar border">
        <ul>
          <li>
            <%= link_to'ホーム', user_path(current_user.id) %>
          </li>
          <li>
            <%= link_to'フォロー', post_followings_path(current_user) %>
          </li>
          <li>
            <%= link_to'フォロワー', post_followers_path(current_user) %>
          </li>
          <li>
            <%= link_to'ブックマーク', post_bookmarks_path(current_user) %>
          </li>
          <li>
            <%= link_to'ログアウト', destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-8">
      <div class="card">
        <div class="card-body">
          <div class="card-user row">
            <%= image_tag @post.user.get_profile_image(100,100), class:'rounded-circle' %>
            <%= @post.user.name %>
            <%= @post.created_at.strftime("%Y/%m/%d") %>
          </div>
          <div class="row">
            <%= form_with model: @post do |f| %>
              <div class="form-group">
                <label for="inputName">商品名</label>
                <%= f.text_field :name, class:"form-control", id:"inputName" %>
              </div>
              <div class="form-group">
                <label for="inputCampany">メーカー</label>
                <%= f.text_field :campany, class:"form-control", id:"inputCampany" %>
              </div>
              <div class="form-group">
                <label for="inputCaption">投稿文</label>
                <%= f.text_area :caption, class:"form-control", id:"inputCaption" %>
              </div>
              <div class="form-group">
                <label for="inputTagName">タグ</label>
                <%= f.text_field :tag_name, class:"form-control", id:"inputCaption" %>
              </div>
              <div class="button">
                <%= f.submit'編集する', class:"btn btn-primary" %>
                <%= link_to'削除', post_path(@post.id), method: :delete, class:"btn btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>