<div class="container">
  <div class="row">
    <%= link_to'投稿する', new_post_path, class:'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="col-3">
      <%= render'public/users/public_side' %>
    </div>
    <div class="col-8">
      <div class="card">
        <div class="card-body">
          <%= render'post_creater', post: @post %>

            <%= form_with model: @post do |f| %>
              <div class="row form-group">
                <label for="inputName" class="col-2">商品名<br>必須</label>
                <%= f.text_field :name, class:"form-control col-7", id:"inputName" %>
              </div>
              <div class="row form-group">
                <label for="inputCampany" class="col-2">メーカー</label>
                <%= f.text_field :campany, class:"form-control col-7", id:"inputCampany" %>
              </div>
              <div class="row form-group">
              <label for="inputImage" class="col-2">画像<br>(必須)</label>
              <%= f.file_field :image, accept: "image/*", class:"form col-7" %>
            </div>
              <div class="row form-group">
                <label for="inputCaption" class="col-2">投稿文<br>(必須)</label>
                <%= f.text_area :caption, class:"form-control col-7", id:"inputCaption" %>
              </div>
              <div class="row form-group">
                <label for="inputTagName" class="col-2">タグ</label>
                <%= f.text_field :tag_name, class:"form-control col-7", id:"inputTagName" %>
              </div>
              <div class="button">
                <%= f.submit'編集する', class:"btn btn-primary" %>
                <%= link_to'削除', post_path(@post.id), method: :delete, class:"btn btn-danger", data: { confirm: '本当に削除しますか？'} %>
              </div>
            <% end %>

        </div>
      </div>
    </div>
  </div>
</div>