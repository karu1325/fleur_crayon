<div class="container-fluid">
  <div class="row my-2">
    <h3 class="col-md-3 col-sm-5 text-center mx-5"><strong>新規投稿</strong></h3>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-3 col-sm-8 mx-5 mb-5 p-0">
      <%= render'public/users/public_side' %>
    </div>

    <div class="bg-light border col-md-6 col-sm-10 pt-3 mb-3">
      <div class="col-md-11 col-sm-9 mx-auto">
        <div class="card mb-4 p-2">
          <div class="card-body ml-3">
            <h5 class="card-user row align-items-center">
              <div class="mx-3">
                <%= image_tag @post.user.get_profile_image(100,100), class:'rounded-circle profile-icon' %>
              </div>
              <div class="ml-5">
                <%= @post.user.name %>
              </div>
            </h5>
            <%= form_with model: @post do |f| %>
              <%= render'post_form', f: f %>
              <div class="row justify-content-center">
                <%= f.submit'投稿する', class:"btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>