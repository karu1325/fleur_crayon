<div class="container">
  <div class="row">
    <h3>投稿一覧</h3>
    <%= link_to'投稿する', new_post_path, class:'btn btn-primary' %>
    <div class="sort-bar">
      <%= link_to'新着順', posts_path(latest: "true") %>
      |<%= link_to'古い順', posts_path(old: "true") %>
      |<%= link_to'いいね順', posts_path(favorite_count: "true") %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <%= render'public/users/public_side' %>
    </div>

    <div class="col-8">
      <% @posts.each do |post| %>
      <div class="card">
        <div class="card-body">
          <%= link_to post_path(post.id) do %>
            <%= render 'post_creater', post: post %>
            <%= render 'post', post: post %>
          <% end %>
        </div>
      </div>
      <% end %>
      <%= paginate @posts %>
    </div>
  </div>
</div>