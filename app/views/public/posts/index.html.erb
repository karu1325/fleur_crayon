<div class="container">
  <div class="row">
    <h1>post/index</h1>
    <%= link_to'投稿する', new_post_path, class:'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="col-3">
      <%= render'public/users/public_side' %>
    </div>

    <div class="col-8">
      <% @posts.each do |post| %>
      <div class="card">
        <div class="card-body">
          <%= link_to post_path(post.id) do %>
            <%= render 'post_creater', post: post %>
            <%= render 'post', post: post %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>