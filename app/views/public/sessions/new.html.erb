<div class="container">
  <div class="row no-gutters">
    <%= render 'public/homes/about' %>
    <div class="col-md-5 col-sm-10 card rounded-5 bg-white mx-auto">
      <div class="card-body">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <h5 class="border-bottom"><strong>ログイン</strong></h5>

        <div class="field">
          <label for="inputEmail">メールアドレス</label><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"inputEmail", placeholder:"sample@mail.com", class:"col-md-10" %>
        </div>

        <div class="field mt-2">
          <label for="inputPassword">パスワード</label><br />
          <%= f.password_field :password, autocomplete: "current-password", id:"inputPassword", class:"col-md-10" %>
        </div>

        <%#<% if devise_mapping.rememberable? %>
          <%#<div class="field">
            <%#<%= f.check_box :remember_me %>
            <%#<%= f.label :remember_me %>
          <%#</div>
        <%#<% end %>

        <div class="btn mt-3">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>

      <div class="row mt-3">
        <div class="btn">
          新規登録は<%= link_to"こちら", new_user_registration_path %>
        </div>
        <div class="btn ml-auto">
          <%= link_to"ゲストログイン", users_guest_sign_in_path, method: :post %>
        </div>
      </div>
    </div>
  </div>
</div>