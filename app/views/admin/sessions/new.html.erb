<div class="container">
  <div class="row no-gutters">
    <%= render 'public/homes/about' %>
    <div class="col-md-5 col-sm-10 card rounded-5 bg-white mx-auto">
      <div class="card-body">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <h5 class="border-bottom">管理者ログイン</h5>

        <div class="field">
          <label for="inputEmail">メールアドレス</label><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"inputEmail", class:"col-md-10" %>
        </div>

        <div class="field mt-2">
          <label for="inputPassword">パスワード</label><br />
          <%= f.password_field :password, autocomplete: "current-password", id:"inputPassword", class:"col-md-10" %>
        </div>
        <div class="btn mt-3">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>