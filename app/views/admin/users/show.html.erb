<div class="container">
  <div class="row">
    <h1>ユーザー詳細</h1>
    <%= link_to"編集する", edit_admin_user_path, class:"btn btn-primary" %>
  </div>
  <div class="row">
    <div class="col-3">
      <%= render'admin/homes/admin_side' %>
    </div>
    <div class="col-8">
      <div class="row">
        <h5>
          ID:<%= @user.id %>
          <%= image_tag @user.get_profile_image(80,80), class:'rounded-circle', size:"50x50" %>
          <%= @user.name %>
          <%= @user.created_at.strftime("%Y/%m/%d") %>
        </h5>
      </div>
      <div class="row">
          <%= @user.email %>
          <% if @user.is_active %>
            <p class="text-success"><strong>有効</strong></p>
          <% else %>
            <p class="text-buted"><strong>退会</strong></p>
          <% end %>
      </div>
      <table class="table-list">
          <thead>
            <tr>
              <th scope="col">投稿日</th>
              <th scope="col">商品名</th>
              <th scope="col">メーカー</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr data-href="/admin/posts/<%= post.id %>">
              <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
              <td><%= post.name %></td>
              <td><%= post.campany %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>

