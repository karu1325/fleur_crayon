<div class="container">
  <div class="row">
    <h3>ユーザー詳細</h3>
    <%= link_to"編集する", edit_admin_user_path, class:"btn btn-success" %>
  </div>
  <div class="row">
    <div class="col-3">
      <%= render'admin/homes/admin_side' %>
    </div>
    <div class="col-8">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <h5>
              ユーザーID:<%= @user.id %>
              <%= image_tag @user.get_profile_image(80,80), class:'rounded-circle', size:"50x50" %>
              <%= @user.name %>
              <%= @user.created_at.strftime("%Y/%m/%d") %>
            </h5>
          </div>
          <div class="row">
            <%= @user.email %>
            <% if @user.is_active %>
              <p class="text-success"><strong>有効</strong></p>
            <% else %>
              <p class="text-buted"><strong>退会</strong></p>
            <% end %>
          </div>
          <div class="d-flex justify-content-center">
          <table class="table-list col-10">
            <thead>
              <tr>
                <th scope="col">投稿日</th>
                <th scope="col">商品名</th>
                <th scope="col">メーカー</th>
              </tr>
            </thead>
            <tbody class="border p-3">
              <% @posts.each do |post| %>
              <tr data-href="/admin/posts/<%= post.id %>">
                <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
                <td><%= post.name %></td>
                <td><%= post.campany %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

