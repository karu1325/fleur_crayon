<div class="container">
  <div class="row">
    <div class="title">ユーザー編集</div>
  </div>
  <div class="row">
    <div class="col-3">
      <%= render'admin/homes/admin_side' %>
    </div>
    <div class="col-8">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <%= image_tag @user.get_profile_image(100,100), class:'rounded-circle profile-icon' %>
            <%= @user.created_at.strftime("%Y/%m/%d") %>
          </div>
          <div class="row">
            <div class="col-3">ユーザーID</div>
            <div class="col-4"><%= @user.id %></div>
          </div>
          <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
            <div class="form-group row">
              <label for="inputName" class="col-3 col-form-label">ユーザー名</label>
              <div class="col-4">
                <%= f.text_field :name, class:"form-control", id:"inputName" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail" class="col-3 col-form-label">メーカー</label>
              <div class="col-4">
                <%= f.email_field :campany, class:"form-control", id:"inputCampany" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputStatus" class="col-3 col-form-label">会員ステータス</label>
              <div class="col-4">
                <%= f.radio_button :is_active, true, id:'inputStatusTrue' %>
                <label for="inputStatusTrue" class="col-form-label">有効</label>
                <%= f.radio_button :is_active, false, id:'inputStatusFalse' %>
                <label for="inputStatusFalse" class="col-form-label">退会</label>
              </div>
            </div>

            <div class="col-3 justify-content-center">
              <%= f.submit'変更を保存', class:"btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
