<div class="container-fluid">
  <div class="row my-2">
    <h3 class="col-md-4 col-sm-6 text-center mx-5"><strong>ユーザー一覧</strong></h3>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-3 col-sm-8 mx-5 mb-5 p-0">
      <%= render'admin/homes/admin_side' %>
    </div>

    <div class="bg-light border col-md-6 col-sm-10 pt-3 mb-3">
      <table class="col-md-10 col-sm-9 mx-auto mb-3 text-center">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">ユーザ名</th>
            <th scope="col">登録日</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
      <% @users.each do |user| %>
        <tbody class="border bg-white p-2">
          <tr data-href="/admin/users/<%= user.id %>">
            <td><%= image_tag user.get_profile_image(100,100), class:"rounded-circle profile-icon" %></td>
            <td><%= user.name %></td>
            <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
            <td><% if user.is_active %>
                  <p class="text-success my-auto"><strong>有効</strong></p>
                <% else %>
                  <p class="text-buted"><strong>退会</strong></p>
                <% end %>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
      <div class="row justify-content-center"><%= paginate @users %></div>
    </div>
  </div>
</div>